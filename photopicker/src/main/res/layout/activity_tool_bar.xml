<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_bar_back"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbarheight"
    android:background="@color/dark">
    <ImageView
        android:id="@+id/action_bar_back_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@mipmap/img_back"/>
    <TextView
        android:id="@+id/action_bar_back_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/action_bar_back_back"
        android:layout_centerVertical="true"
        android:text="自定义"
        android:textColor="@color/title"
        android:textSize="@dimen/action_bar_title" />
    <ImageView
        android:id="@+id/action_bar_back_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:src="@mipmap/ic_action_discard"/>
    <TextView
        android:id="@+id/action_bar_back_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/nomaltextsize"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:layout_alignParentRight="true"
        android:textColor="@color/title"/>

</RelativeLayout>
