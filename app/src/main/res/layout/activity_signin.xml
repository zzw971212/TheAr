<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zzw.thinkpad.thear.ui.activity.schoolannouncement.View.SchoolannouncementActivity">

    <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@mipmap/btn_pa"></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/bg_sign"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="连续十天签到"
            android:textColor="@color/font_pink"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="即可免费领取能量值"
            android:textColor="@color/font_pink"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="8dp"
            android:background="#ffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第1天"
                    android:textColor="@color/font_pink"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第2天"
                    android:textColor="@color/font_pink"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第3天"
                    android:textColor="@color/font_pink"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第4天"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第5天"
                    android:textSize="16sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/one1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/qiandao" />


                <View
                    android:layout_toRightOf="@+id/one"
                    android:layout_width="50dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>
                <View
                    android:visibility="invisible"
                    android:id="@+id/view1"
                    android:layout_width="50dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/one"
                    android:background="@color/font_pink"></View>

                <ImageView
                    android:id="@+id/two"
                    android:layout_toRightOf="@+id/view1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:id="@+id/view2"
                    android:layout_toRightOf="@+id/two"
                    android:layout_width="45dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:id="@+id/three"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:id="@+id/view3"
                    android:layout_toRightOf="@+id/three"
                    android:layout_width="45dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:id="@+id/four"
                    android:layout_toRightOf="@+id/view3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:id="@+id/view4"
                    android:layout_toRightOf="@+id/four"
                    android:layout_width="45dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:layout_toRightOf="@id/view4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第6天"

                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第7天"

                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第8天"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第7天"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第5天"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="#fafbfc"></View>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/oval_sign" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="再签到七天就能够领取能量值哦"
            android:textColor="@color/font_pink" />

        <Button
            android:id="@+id/btn_yiqiandao"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/rt_sign"
            android:paddingBottom="12dp"
            android:text="今日已签到"
            android:textSize="18sp"
            android:textColor="@color/font_pink"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginLeft="120dp"
        android:background="@mipmap/rt2_sign"
        android:paddingBottom="12dp"
        android:text="立即签到"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
