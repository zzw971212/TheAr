<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_register"
    android:orientation="vertical"
    tools:context="com.zzw.thinkpad.thear.ui.activity.register.View.RegisterActivity">

    <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="110dp"
        android:hint="手机号"
        android:phoneNumber="true"
        android:background="@null"
        android:textSize="14sp"/>
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="@mipmap/bg_register_et"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/num_code"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:hint="验证码"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="获取验证码"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:background="@mipmap/bg_register_et"
        ></View>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="56dp"
        android:background="@mipmap/bg_login_btn"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="14sp"

        />
</LinearLayout>
