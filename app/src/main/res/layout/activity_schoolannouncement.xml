<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zzw.thinkpad.thear.ui.activity.schoolannouncement.View.SchoolannouncementActivity">
    <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@mipmap/btn_pa"
        android:id="@+id/toolbar"
        ></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/bg_school"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.3.4"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@mipmap/bg_an"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【关于消防演练的通知】"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginTop="8dp"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布者：浙江传媒学院"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/font_pink"
                android:layout_marginLeft="150dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.3.2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@mipmap/bg_an"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【温馨提示】"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginTop="8dp"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布者：浙江传媒学院"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="@color/font_pink"
                android:layout_marginLeft="150dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.2.22"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@mipmap/bg_an"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【温馨提示】"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="#000"
                />
