<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/bg_state_top">

        <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipes"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="58dp"
        android:background="@mipmap/bg_state_ll2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_my"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/imag_my" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:text="麻花花是超人"
                    android:textSize="22sp" />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="8dp"
                android:text="浙江传媒学院18级XX"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tipes"
        android:layout_weight="1"
        android:background="@mipmap/my_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mygarden"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_garden"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_garden" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_garden"
                    android:text="我的花园" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>

            <RelativeLayout
                android:id="@+id/num_praise"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_praise"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_praise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_praise"
                    android:text="获赞次数" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>

            <RelativeLayout
                android:id="@+id/myclass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_addclass"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_addclass" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/img_addclass"
                    android:layout_toRightOf="@+id/img_addclass"
                    android:text="我的班级" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right"
                    android:id="@+id/imageView" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>

            <RelativeLayout
                android:id="@+id/addwork"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_handwork"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_handwork" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_handwork"
                    android:text="上交作业" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>

            <RelativeLayout
                android:id="@+id/rl_choolannouncement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_notice"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_notice"
                    android:text="校园公告" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>

            <RelativeLayout
                android:id="@+id/rl_signin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_signin"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_signin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_signin"
                    android:text="签到" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@mipmap/state_line"></View>

            <RelativeLayout
                android:id="@+id/setup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_setup"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="32dp"
                    android:src="@mipmap/my_img_setup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/img_setup"
                    android:text="设置" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_img_right" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>