<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_detail"
    android:orientation="vertical"
    >
    <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/detail_1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="马花花是超人"
        android:textColor="#000"
        android:layout_marginLeft="28dp"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天04:10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/detail_one"
            android:scaleType="fitXY"
            android:layout_marginLeft="28dp"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/detail_two"
            android:scaleType="fitXY"
            android:layout_marginLeft="28dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/img_watch"
            android:layout_marginLeft="28dp"
            />
        <TextView
            android:id="@+id/see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89,959"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/img_love"
            android:layout_marginLeft="85dp"
            />
        <TextView
            android:id="@+id/num_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/img_comment"
            android:layout_marginLeft="32dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            android:id="@+id/num_comment"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/img_share"
            android:layout_marginLeft="32dp"
            />
        <TextView
            android:id="@+id/num_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="12sp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@mipmap/state_line"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/dp_16"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="56dp"
                       android:layout_height="56dp"
                       android:src="@mipmap/image_user1"
                       android:layout_marginLeft="8dp"
                       android:scaleType="fitXY"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginLeft="8dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="xxxx"
                           android:textColor="#000000"
                           android:textSize="14sp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="今天4:10"
                           android:layout_marginTop="4dp"
                           android:textSize="14sp"
                           />

                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="哇！看起来还不错啊！"
                       android:layout_marginLeft="28dp"
                       />
                   <ImageView
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@mipmap/img_love"
                       android:layout_marginLeft="78dp"
                       />
                   <TextView
                       android:id="@+id/num_love1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="47"
                       android:textSize="12sp"
                       android:layout_marginLeft="8dp"
                       />
                   <ImageView
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@mipmap/img_comment"
                       android:layout_marginLeft="28dp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="17"
                       android:textSize="12sp"
                       android:layout_marginLeft="8dp"
                       android:id="@+id/num_comment1"
                       />
               </LinearLayout>
           </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:src="@mipmap/state_line"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/dp_16"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:id="@+id/head"
                       android:layout_width="56dp"
                       android:layout_height="56dp"
                       android:src="@mipmap/image_user1"
                       android:layout_marginLeft="8dp"
                       android:scaleType="fitXY"
                       />
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginLeft="8dp"
                       >
                       <TextView
                           android:id="@+id/name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="xxxx"
                           android:textColor="#000000"
                           android:textSize="14sp"
                           />
                       <TextView
                           android:id="@+id/time"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="今天4:10"
                           android:layout_marginTop="4dp"
                           android:textSize="14sp"
                           />

                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="哇！看起来还不错啊！"
                       android:layout_marginLeft="28dp"
                       />
                   <ImageView
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@mipmap/img_love"
                       android:layout_marginLeft="78dp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="47"
                       android:textSize="12sp"
                       android:layout_marginLeft="8dp"
                       />
                   <ImageView
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@mipmap/img_comment"
                       android:layout_marginLeft="28dp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="17"
                       android:textSize="12sp"
                       android:layout_marginLeft="8dp"

                       />
               </LinearLayout>
           </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:src="@mipmap/state_line"
               />
       </LinearLayout>
    </ScrollView>
</LinearLayout>
