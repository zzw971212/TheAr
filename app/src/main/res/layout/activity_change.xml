<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.zzw.thinkpad.thear.ui.activity.praise.View.ChangeActivity">

    <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_addwork"></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/kehuangou"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="#81d68b"
        android:textSize="28sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="换购能量:"
        android:textSize="22sp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="18dp"
        />
    <EditText
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:hint="请输入换购能量值"
        android:background="@mipmap/qq1"
        android:layout_marginTop="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前能量为50"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部换购"
            android:textColor="#81d68b"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            />

    </LinearLayout>
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="换购能量"
        android:background="@mipmap/qq2"
        android:textColor="#81d68b"
        android:paddingBottom="12dp"
        />
</LinearLayout>
