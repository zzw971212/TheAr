<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zzw.thinkpad.thear.ui.activity.praise.View.PraiseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/bg_state_top">

        <com.zzw.thinkpad.thear.weight.layout.NormalToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.zzw.thinkpad.thear.weight.layout.NormalToolbar>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/tipes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="90dp"
        android:background="@mipmap/bg_state_ll2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/num_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的获赞次数"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="@color/font_pink"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:layout_below="@+id/num_praise"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/num"
            android:orientation="horizontal"
            android:id="@+id/ll"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可换购能量"
                    android:textSize="16sp"
                    android:layout_marginLeft="48dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="16sp"
                    android:layout_marginLeft="48dp"
                    android:textColor="@color/font_pink"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史获赞次数"
                    android:textSize="16sp"
                    android:layout_marginLeft="48dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110"
                    android:textSize="16sp"
                    android:layout_marginLeft="48dp"
                    android:textColor="@color/font_pink"
                    /></LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:src="@mipmap/line_shu"
            android:layout_below="@+id/num"
            android:layout_marginLeft="176dp"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/ll"
            android:background="@mipmap/state_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            ></View>
        <TextView
            android:id="@+id/tv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨日新增记录+1"
           android:layout_marginLeft="38dp"
            android:layout_below="@id/view1"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_record"
            android:background="@mipmap/state_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            ></View>

    </RelativeLayout>
    <ImageView
        android:id="@+id/img_my"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="68dp"
        android:src="@mipmap/my_oval" />
    <Button

        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tipes"
        android:background="@mipmap/btn_praise"
        android:text="换购能量"
        android:textColor="#ffffff"
        android:id="@+id/button" />

    <RelativeLayout
        android:id="@+id/praise_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/tipes"
        android:layout_alignStart="@+id/tipes"
        android:layout_marginBottom="39dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="8dp"
            android:text="获赞记录"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="14dp"
            android:src="@mipmap/btn_right"

            />
    </RelativeLayout>
</RelativeLayout>
